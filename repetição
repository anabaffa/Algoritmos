Algoritmo "ConteAte10"
Var
 contador: inteiro
Inicio
      contador <- 0
      Enquanto (contador <=100) faça
           EscrevaL(contador)
           contador <- contador + 10
      FimEnquanto
Fimalgoritmo



Algoritmo "ConteComSalto"
Var
 contador, salto, N: inteiro
Inicio
      contador <- 0
      Escreva ("Até qual número quer contar? ")
      Leia (N)
      Escreva ("Qual será o valor do salto? ")
      Leia (salto)
      Enquanto (contador <= N) faça
               EscrevaL(contador)
               contador <- contador + salto
      FimEnquanto
      Escreva ("Terminei de contar ")
Fimalgoritmo




Algoritmo "MaiorNumero"
Var
 contador, S, N, maior: inteiro
Inicio
contador <- 1
S <- 0
      Enquanto (contador <= 5) faça
               Escreva ("Digite o ", contador, "o. valor : ")
               Leia (N)
               Se (N > maior) entao
                  maior <- N
               FimSe
               S <- S + N
               contador <- contador + 1
      FimEnquanto
      Escreva ("A soma de todos os valores foi: ", S)
Fimalgoritmo







Algoritmo "ContagemInteligente"
Var
 C, I, F: real
Inicio
      Escreval ("CONTAGEM INTELIGENTE")
      Escreval ("--------------------")
      Escreval ("Início: ")
      Leia (I)
      Escreval ("Final: ")
      Leia (F)
      C <- I
      Enquanto (C <= F) faça
               Escreval (C)
               C <- C + 1
      FimEnquanto
Fimalgoritmo





Algoritmo "ContagemInteligente"
var
      C, F: inteiro
inicio
      Escreval ("CONTAGEM INTELIGENTE")
      Escreval ("--------------------")
      Escreval ("Início: ")
      Leia (C)
      Escreval ("Final: ")
      Leia (F)
          se   (C < F) entao
                   enquanto (C <= F) faca
                            Escreva (C)
                            C <- C + 1
                   fimenquanto
          senao
                     se C  > F entao
                        enquanto (C >= F) faca
                        escreva  (C)
                        C <- C - 1
                     fimenquanto
                     fimse
          fimse
FimAlgoritmo





Algoritmo "MelhorAluno"
var
Q, C: inteiro
N, MelhorN : real
A, MelhorA : caractere
inicio
      Escreval ("----------------------")
      Escreval ("Escola Santa Paciencia")
      Escreval ("----------------------")
      Escreval ("Quantos alunos tem na turma? ")
      Leia (Q)
      C <- 1
      Enquanto (C <= Q) faça
               Escreval ("Nome do Aluno ", C, ": ")
               Leia (A)
               Escreval ("Nota de ", A)
               Leia (N)
               C <- C + 1
                 se ( N > MelhorN) entao
                   MelhorA <- A
                   MelhorN <- N
                 FimSe
      FimEnquanto
      EscrevaL ("------------------")
      Escreval (" O ALUNO COM MELHOR DESEMPENHO FOI: ")
      EscrevaL  (">>> ", MelhorA , " com nota : " , MelhorN)
Fimalgoritmo
